source 'https://rubygems.org'

git_source(:github) {|repo_name| 'https://github.com/#{repo_name}' }

# Database
gem 'activerecord'
gem 'sqlite3'
gem 'standalone_migrations'

# Time parsing
gem 'chronic'

# Command line tools
gem 'commander'
gem 'curses'

group :test, :development do
  gem 'byebug'
  gem 'factory_bot'
  gem 'rspec'
  gem 'timecop'
end
