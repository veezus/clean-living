source 'https://rubygems.org'

# Database
gem 'activerecord'
gem 'sqlite3'
gem 'standalone_migrations', git: 'https://github.com/thuss/standalone-migrations'

# Time parsing
gem 'chronic'

# Command line tools
gem 'commander'
